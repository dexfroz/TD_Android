<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/titleDialogTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"></TextView>

   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

    <Button
        android:id="@+id/bouttonAppareilPhotoDialogTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appareil photo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galerie"
        android:id="@+id/bouttonGalerieDialogTemplate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bouttonAnnulerDialogTemplate"
        android:text="Annuler"/>
   </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>